        fetch("/delete/" + id, {
          method: "POST"
        }).then(data => {
        location.reload();
        }).catch(e => {
          alert("Failed"+ e)
        })
      }
      var handleForm = () => {
        let host = document.getElementById('url').value;
        addUrl(host, host);
      }

      var addUrl = (url, method) => {
        if(!url)
          return alert("Please enter valid URL");
        fetch("/add/", {
          method: "POST",
          body: new URLSearchParams({
          host: url,
            method: method??"POST"
          })
        }).then(data => {
        location.reload();
        }).catch(e => {
          alert("Failed"+ e)
        })

      }

