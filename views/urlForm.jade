script.
      var deleteUrl = function(id, host) {
        if(!confirm('Are you sure you want to delete this item: '+host+' ?')) 
          return;
        fetch("/url/delete/" + id, {
          method: "POST"
        }).then(data => {
        location.reload(true);
        }).catch(e => {
          alert("Failed"+ e)
        })
      }
      var handleForm = () => {
        let host = document.getElementById('url').value;
        addUrl(host, host);
      }

      var addUrl = (url, method) => {
        if(!url)
          return alert("Please enter valid URL");
        fetch("/url/add/", {
          method: "POST",
          body: new URLSearchParams({
            host: url,
            method: method??"POST"
          })
        }).then(data => {
        location.reload(true);
        }).catch((e) => {
          alert("Failed"+ e)
          location.reload(true);
        })

      }


